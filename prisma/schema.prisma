generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Category model for organizing energy drinks
model Category {
  id      String    @id @default(uuid())
  name    String    @unique
  Product Product[]
}

model Product {
  id          String        @id @default(uuid())
  title       String
  description String
  inStock     Int
  price       Float         @default(0)
  sizes       Size[]        @default([])
  slug        String        @unique
  tags        String[]      @default([])
  type        Type
  category    Category      @relation(fields: [categoryId], references: [id])
  categoryId  String
  producImage producImage[]

  @@index([type])
}

enum Size {
  ML_250
  ML_355
  ML_473
  ML_500
  ML_710
}

enum Type {
  classic
  sugar_free
  zero
  gaming
  premium
}

model producImage {
  id        Int     @id @default(autoincrement())
  url       String
  product   Product @relation(fields: [productId], references: [id])
  productId String
}
